<!DOCTYPE html>
<html>
<head>
  <title>StuartTunes</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="navbar">
    <div class="navbar-inner">
      <span class="brand"><%= link_to "StuartTunes", root_path %></span>
      <ul class="nav">
        <li><%= link_to "Songs", songs_path %></li>
        <li><%= link_to "Albums", albums_path %></li>
        <li><%= link_to "Artists", artists_path %></li>
        <li><%= link_to "Genres", genres_path %></li>
        <% if current_user %>
          <li id="sign-out"><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, :id => "out" %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="span12"><%= yield %></div>
  </div>
  <footer>
    <ul id="footer-line">
      <% if current_user.try(:admin) %>
      <li><%= link_to 'New Song', new_song_path %></li>
      <li><%= link_to 'New Artist', new_artist_path %></li>
      <li><%= link_to 'New Genre', new_genre_path %></li>
      <li><%= link_to 'New Album', new_album_path %></li>
      <% end %>
    <ul>
  </footer>
</div>





<%#= debug(params) if Rails.env.development? %>

</body>
</html>
