<h1>Buy and Listen to Songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td>$<%= song.price %></td>
    <% if current_user.purchases.find_by_song_id(song.id) != nil || current_user.admin? %>
      <td>
        <audio controls ="controls">
        <source src="<%= song.audiofile %>" type="audio/mpeg">
      </td>
    <% end %>

    <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_song_path(song) %></td>
      <td><%= link_to 'Delete', song, method: :delete, data:{ confirm: 'Are you sure?'} %></td>
    <% end %>

    <% if current_user.purchases.find_by_song_id(song.id) == nil && !current_user.admin? %>
      <td><%= form_tag '/newpurchase' do %>
        <%= hidden_field_tag 'song_id', song.id %>
        <%= submit_tag 'Buy it now!' %>
      <% end %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

