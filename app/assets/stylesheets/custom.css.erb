li {
  display: block;
  float: left;
}

h1.artists {
  text-align: center;
}

.nav {
  padding: 0 6em;
  color: grey;
}

.navbar-inner {
  padding-left: 20px;
  padding-right: 0px;
}

.slideshow {
  margin: 0 auto 1.5em;
}

#out {
  color: red;
}

.hero-unit {
  text-align: center;
  padding: 20px;
}

.hero-unit p {
  text-align: left;
}

.hero-unit img {
  max-height: 300px;
  margin-bottom: 10px;
}

.title-box {
  background-color: transparent;
  border: none;
}

.artist-box {
  background-color: rgba(255, 249, 177, 0.9);
}

.text-color {
  color: #11929E;
}

.artist-name {
  border-bottom: 1px ridge #B2A589;
  margin: 0em 0em 1em 0em;
}

footer {
width: 670px;
overflow: hidden;
margin: 0 auto;
}
  footer:after {
    clear: both;
  }

#footer-line{
  width: 670px;
  overflow: hidden;
}
  #footer-line:after { clear: both; }

footer ul li {
  padding: 0.5em 2em;
  text-align: center;
  border-top: 2px solid #6B6B6B;
  background-color: rgba(255, 255, 255, 0.7);
  font-weight: 550;
}

html {
  background: url(<%= asset_path 'Detroit_Skyline.jpg' %>) no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

#sign-out {
  padding: 0em 14em;
}

#slideshowHolder {
  opacity: .8;
}

body {
  background-color: transparent;
}